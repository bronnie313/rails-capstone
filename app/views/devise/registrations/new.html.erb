<nav id="nav">
  <div class="nav-list">
    <a href="<%= root_path %>" class="back-btn">
      <i class="fa-solid fa-chevron-left"></i> 
    </a>  
    <h1 class="title">Register</h1>
    <%= link_to "Signup", destroy_user_session_path, method: :delete, class: 'btn btn-outline-light btn-sm float-start logout' %>
  </div>
</nav>
<div class="login-page">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'signup-form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
  <%= f.text_field :name, placeholder: "Name", class: "login_filed" %>
  </div>
  <hr>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "login_filed" %>
  </div>
  <hr>
  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "login_filed" %>
  </div>
  <hr>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "login_filed" %>
  </div>
  <hr>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
