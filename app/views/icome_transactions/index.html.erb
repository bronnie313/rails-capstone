<nav id="nav">
  <div class="nav-list">
    <a href="<%= categories_path %>" class="back-btn">
      <i class="fa-solid fa-chevron-left"></i> 
    </a>  
    <h1 class="title">transactions</h1>
    <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'btn btn-outline-light btn-sm float-start logout' %>
  </div>
</nav>
<div class="total-transaction-income">
  <strong>
  <%= @category.name %>
  </strong>
  <strong>
  $ <%= @category.icome_transactions.sum(:amount)%>
  </strong>
</div>
<p class="notice"><%= notice %></p>

<div id="icome_transactions">
  <% @icome_transactions.sort_by{ |icome_transaction|icome_transaction.created_at}.reverse.each do |icome_transaction| %>
    <div class="d-flex align-items-center single-transaction">
    <%= render icome_transaction %>
    <%= button_to "Delete",[@category, icome_transaction], method: :delete, class: 'btn btn-outline-dark btn-sm float-start' %>
    </div>
  <% end %>
</div>
<div class="bottom-btn">
<%= link_to "New transaction", new_category_icome_transaction_path, class: 'category-btn' %>
</div>

  